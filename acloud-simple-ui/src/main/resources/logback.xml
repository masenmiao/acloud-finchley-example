<configuration>

	<property name="LOG_PATTERN" value="[%p][%d{yyyy-MM-dd HH:mm:ss SSS}][%t][%logger{0}.%M:%L][%X{bizSeqNo}][%X{consumerSeqNo}][%m]%n"/>
  
    <appender name="app" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <!--See http://logback.qos.ch/manual/appenders.html#RollingFileAppender-->
    <!--and http://logback.qos.ch/manual/appenders.html#TimeBasedRollingPolicy-->
    <!--for further documentation-->

    <File>./logs/web-simple.log</File>
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>TRACE</level>
    </filter>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>./logs/web-simple.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
	  <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">  
            <maxFileSize>512MB</maxFileSize>
       </timeBasedFileNamingAndTriggeringPolicy>
    </rollingPolicy>
  </appender>

 
  
  <appender name="error" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <!--See http://logback.qos.ch/manual/appenders.html#RollingFileAppender-->
    <!--and http://logback.qos.ch/manual/appenders.html#TimeBasedRollingPolicy-->
    <!--for further documentation-->
    <Append>true</Append>
    <File>./logs/error.log</File>
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>ERROR</level>
    </filter>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>./logs/error.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
      
      <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">  
            <maxFileSize>512MB</maxFileSize>
       </timeBasedFileNamingAndTriggeringPolicy>

    </rollingPolicy>
  </appender>
  


    <appender name="asynApp" class="ch.qos.logback.classic.AsyncAppender">
    	<discardingThreshold>0</discardingThreshold>
  		<queueSize>10240</queueSize>
  		<includeCallerData>true</includeCallerData>
    	<appender-ref ref="app"/>
  	</appender>
  	
  	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
  </appender>

    <logger name="acloud" level="DEBUG">
  </logger>
  

  <logger name="org.springframework" level="INFO">
  </logger>
  <logger name="com.ibatis" level="ERROR">
  </logger>
  
  <logger name="org.mybatis" level="ERROR"/>
  <logger name="tk.mybatis" level="ERROR"/>
  
  <logger name="java.sql.Connection" level="INFO">
  </logger>
  <logger name="java.sql.PreparedStatement" level="INFO">
  </logger>
  <logger name="java.sql.Statement" level="INFO">
  </logger>
  <logger name="org.apache" level="WARN">
  </logger>
  <logger name="org.quartz" level="INFO">
  </logger>
  
  <root level="INFO">
        <appender-ref ref="console" />
    	<appender-ref ref="asynApp" />
		<appender-ref ref="error" />
  </root>
  
</configuration>